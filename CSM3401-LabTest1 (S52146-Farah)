#question1
def TotalBits( n): 
    if (n == 0): 
        return 0
    else: 
        return (n&1) + TotalBits(n>>1) 
n = int(input("Enter Input Number : "))
print(TotalBits(n))      


#question2
import collections
a = input("Enter Your brother/ sister name")
print(collections.Counter(a).most_common(1)[0])


